@page
@model FutaMeetWeb.Pages.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to VIIDII</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            background: rgba(255, 255, 255, 0.9); /* Dim white background */
            font-family: 'Poppins', sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #333;
            position: relative;
            overflow: hidden;
        }

        /* Top Curves Wrapper */
        .top-curve-wrapper {
            position: absolute;
            top: -100px;
            left: -100px;
            z-index: 0;
            width: 300px;
            height: 300px;
        }

        .top-curve-rect-1 {
            position: absolute;
            width: 245px;
            height: 245px;
            background: linear-gradient(128.97deg, #8338EC 2.4%, #C19BF5 85.87%);
            border-radius: 50%;
            top: 0;
            left: 0;
            filter: blur(2.5px);
            z-index: 1;
        }

        .top-curve-rect-2 {
            position: absolute;
            width: 140px;
            height: 140px;
            background: linear-gradient(151.12deg, #3A86FF 29.33%, #9CC3FF 86.49%);
            border-radius: 50%;
            top: 30px;
            left: 30px;
            filter: blur(2.5px);
            z-index: 2;
        }

        .logo {
            margin-bottom: 2rem;
            z-index: 1;
        }

            .logo img {
                width: 120px;
                height: auto;
            }

        .welcome-container {
            text-align: center;
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2); /* Vivid shadow */
            max-width: 400px;
            width: 100%;
            z-index: 1;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        p {
            margin-bottom: 2rem;
        }

        .sign-in-btn {
            display: inline-block;
            width: 100%;
            padding: 12px;
            background-color: #3A86FF;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            margin-bottom: 1rem;
            text-decoration: none;
        }

        .sign-in-text {
            font-family: 'Poppins', sans-serif;
            font-style: normal;
            font-weight: 500;
            font-size: 1rem;
            line-height: 1.5rem;
            color: white;
        }

        .guest-link {
            color: #3A86FF;
            text-decoration: none;
            font-size: 0.9rem;
            display: block;
        }
    </style>
</head>
<body>
    <!-- Top Curves -->
    <div class="top-curve-wrapper">
        <div class="top-curve-rect-1"></div>
        <div class="top-curve-rect-2"></div>
    </div>

    <!-- Logo -->
    <div class="logo">
        <img src="~/images/viidii-logo.png" alt="Viidii Logo" />
    </div>

    <!-- Welcome Box -->
    <div class="welcome-container">
        <h1>Welcome,</h1>
        <p>Let's get you started!</p>
        <a asp-page="/Login" class="sign-in-btn">
            <span class="sign-in-text">Sign In</span>
        </a>
        <a href="#" class="guest-link">Join as guest</a>
    </div>
</body>
</html>
