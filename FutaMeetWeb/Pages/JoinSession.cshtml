@page
@using FutaMeetWeb.Models
@model FutaMeetWeb.Pages.JoinSessionModel
@{
    ViewData["Title"] = "Join Session - FutaMeet";
    Layout = null;
}

<style>
    .gradient-bg {
        background: linear-gradient(135deg, rgba(110, 72, 170, 0.5) 0%, rgba(157, 80, 187, 0.5) 100%);
        min-height: 100vh;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        backdrop-filter: blur(5px);
    }

    .centered-form {
        max-width: 400px;
        width: 100%;
    }

    .modern-card {
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .modern-heading {
        color: #4a2e80;
        text-align: center;
    }

    .modern-input, .modern-select {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
    }

    .btn-skeuo {
        background-color: #6e48aa;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px;
        cursor: pointer;
        width: 100%;
    }

        .btn-skeuo:hover {
            background-color: #9d50bb;
        }
</style>

<div class="gradient-bg">
    <div class="centered-form">
        <div id="main-content" class="modern-card">
            @if (string.IsNullOrEmpty(Model.CurrentSessionId))
            {
                <form method="post" class="modern-form p-4 mb-4">
                    <h2 class="text-center mb-4 modern-heading">Join a Session</h2>
                    <div id="loading-skeleton" style="display: none;">
                        <div class="placeholder-glow mb-3">
                            <span class="placeholder col-3 modern-placeholder"></span>
                            <span class="placeholder col-12 mt-2 modern-placeholder" style="height: 38px;"></span>
                            <span class="placeholder col-4 mt-3 modern-placeholder" style="height: 38px;"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SessionId" class="form-label modern-label">Available Sessions</label>
                        <select asp-for="SessionId" asp-items="Model.AvailableSessions" class="form-select modern-input" required>
                            <option value="">-- Select a session --</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-skeuo">
                        <i class="fas fa-sign-in-alt"></i> Join Session
                    </button>
                </form>
            }
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <p class="mt-3 text-center modern-status" id="statusMessage">@Model.Message</p>
            }
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

<script src="https://unpkg.com/peerjs@1.5.4/dist/peerjs.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js"></script>
<script src="~/js/session.js"></script>

@section Scripts {
    <script>
        window.sessionState = @Html.Raw(Json.Serialize(new
            {
                isSessionStarted = Model.IsSessionStarted,
                sessionId = Model.CurrentSessionId
            }));
        window.isSessionLecturer = @Json.Serialize(Model.IsSessionLecturer);

        document.addEventListener("DOMContentLoaded", () => {
            const sessionVideo = document.getElementById("sessionVideo");
            if (!sessionVideo) return console.error("Session video element not found.");
            console.log("Video Element Ready:", sessionVideo);
            console.log("Stream:", sessionVideo.srcObject);

            sessionVideo.onloadedmetadata = () => {
                console.log("Metadata loaded. Stream:", sessionVideo.srcObject);
            };
        });
    </script>
}
